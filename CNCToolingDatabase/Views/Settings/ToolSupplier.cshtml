@model List<CNCToolingDatabase.Models.ToolSupplier>
@{
    ViewData["Title"] = "Settings - Tool Supplier";
}

<div class="module-header">
    <h2>Tool Supplier Management</h2>
    <div style="display: flex; gap: 0.5rem;">
        <button type="button" class="btn btn-primary" onclick="openCreateModal()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Tool Supplier
        </button>
        <button type="button" class="btn btn-secondary" onclick="resetFromSeed()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="23 4 23 10 17 10"></polyline>
                <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
            Reset
        </button>
    </div>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <input type="hidden" name="sortColumn" value="@ViewBag.SortColumn" />
        <input type="hidden" name="sortDirection" value="@ViewBag.SortDirection" />
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Search tool suppliers..." class="search-input" id="searchInput" />
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Search</button>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th onclick="sortBy('id')">No. @Html.Raw(GetSortIcon("id", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('name')">Tool Supplier @Html.Raw(GetSortIcon("name", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('website')">Website @Html.Raw(GetSortIcon("website", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('status')">Status @Html.Raw(GetSortIcon("status", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('createdby')">Created By @Html.Raw(GetSortIcon("createdby", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('createddate')">Created Date @Html.Raw(GetSortIcon("createddate", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="7" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                            <circle cx="12" cy="7" r="4"></circle>
                        </svg>
                        <p>No tool suppliers found</p>
                        <p style="font-size: 0.9rem; color: #666;">Add data or click Reset to load from MASTER - TOOL SUPPLIER.xlsx</p>
                    </td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    var currentPage = Math.Max(1, (int)(ViewBag.CurrentPage ?? 1));
                    var pageSize = Math.Max(1, (int)(ViewBag.PageSize ?? 250));
                    var no = (currentPage - 1) * pageSize + i + 1;
                    var sortById = string.Equals(ViewBag.SortColumn as string, "id", StringComparison.OrdinalIgnoreCase);
                    var nameJs = (item.Name ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\"", "&quot;");
                    var websiteJs = (item.Website ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\"", "&quot;");
                    var statusJs = (item.Status ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\"", "&quot;");
                    <tr>
                        <td>@(sortById ? item.Id : no)</td>
                        <td>@item.Name</td>
                        <td>
                            @if (!string.IsNullOrWhiteSpace(item.Website))
                            {
                                <a href="@(item.Website.StartsWith("http") ? item.Website : "https://" + item.Website)" target="_blank" rel="noopener noreferrer" class="website-link">@item.Website</a>
                            }
                            else
                            {
                                <span>-</span>
                            }
                        </td>
                        <td>
                            @{
                                var statusLower = (item.Status ?? "").ToLower();
                                var isActive = statusLower == "active" || statusLower == "aktif";
                                var statusClass = isActive ? "status-available" : "status-locked";
                                var statusDisplay = isActive ? "Active" : "Inactive";
                            }
                            <span class="status-badge @statusClass">@statusDisplay</span>
                        </td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="editItem(@item.Id, '@nameJs', '@websiteJs', '@statusJs')">Edit</button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem(@item.Id, '@nameJs')">Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalItems != null && (int)ViewBag.TotalItems > 0)
{
    @await Html.PartialAsync("_Pagination", new PaginationViewModel
    {
        CurrentPage = (int)ViewBag.CurrentPage,
        TotalPages = Math.Max(1, (int)ViewBag.TotalPages),
        TotalItems = (int)ViewBag.TotalItems,
        PageSize = (int)ViewBag.PageSize,
        QueryBase = (string)(ViewBag.PaginationQuery ?? "")
    })
}

<!-- Create/Edit Modal -->
<div class="modal" id="itemModal">
    <div class="modal-backdrop" onclick="closeModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Add Tool Supplier</h3>
            <button type="button" class="btn-icon" onclick="closeModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <form id="itemForm">
                <input type="hidden" id="itemId" />
                <div class="form-group">
                    <label for="nameValue">Tool Supplier *</label>
                    <input type="text" id="nameValue" class="form-control" placeholder="e.g. Sandvik" required />
                </div>
                <div class="form-group">
                    <label for="websiteValue">Website</label>
                    <input type="text" id="websiteValue" class="form-control" placeholder="e.g. https://www.sandvik.com" />
                </div>
                <div class="form-group">
                    <label for="statusValue">Status</label>
                    <select id="statusValue" class="form-control">
                        <option value="ACTIVE">Active</option>
                        <option value="INACTIVE">Inactive</option>
                    </select>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function sortBy(column) {
        const params = new URLSearchParams(window.location.search);
        const currentSort = params.get('sortColumn');
        const currentDir = params.get('sortDirection');
        params.set('sortColumn', column);
        params.set('sortDirection', (currentSort === column && currentDir === 'asc') ? 'desc' : 'asc');
        params.set('page', '1');
        window.location.href = window.location.pathname + '?' + params.toString();
    }
    
    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Add Tool Supplier';
        document.getElementById('itemForm').reset();
        document.getElementById('itemId').value = '';
        document.getElementById('nameValue').disabled = false;
        document.getElementById('itemModal').classList.add('active');
    }
    
    function editItem(id, name, website, status) {
        document.getElementById('modalTitle').textContent = 'Edit Tool Supplier';
        document.getElementById('itemId').value = id;
        document.getElementById('nameValue').value = name || '';
        document.getElementById('nameValue').disabled = true;
        document.getElementById('websiteValue').value = website || '';
        document.getElementById('statusValue').value = status || '';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function deleteItem(id, name) {
        if (!confirm('Are you sure you want to delete Tool Supplier "' + name + '"?')) return;
        fetch('/Settings/DeleteToolSupplier', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'id=' + id
        })
        .then(r => r.json())
        .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
        .catch(e => alert('Error: ' + e.message));
    }
    
    function resetFromSeed() {
        if (!confirm('This will delete all current tool supplier data and restore seed data from MASTER - TOOL SUPPLIER.xlsx only. This action cannot be undone.\n\nDo you want to continue?')) return;
        fetch('/Settings/ResetToolSupplier', { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body: '' })
            .then(r => r.json())
            .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
            .catch(e => alert('Error: ' + e.message));
    }
    
    function closeModal() {
        document.getElementById('itemModal').classList.remove('active');
        document.getElementById('nameValue').disabled = false;
    }
    
    document.getElementById('itemForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const itemId = document.getElementById('itemId').value;
        const name = document.getElementById('nameValue').value.trim();
        const website = document.getElementById('websiteValue').value.trim();
        const status = document.getElementById('statusValue').value.trim();
        
        let url = '/Settings/CreateToolSupplier';
        let body = 'name=' + encodeURIComponent(name) + '&website=' + encodeURIComponent(website) + '&status=' + encodeURIComponent(status);
        
        if (itemId) {
            url = '/Settings/UpdateToolSupplier';
            body = 'id=' + itemId + '&website=' + encodeURIComponent(website) + '&status=' + encodeURIComponent(status);
        }
        
        if (!name && !itemId) {
            alert('Tool Supplier name is required.');
            return;
        }
        
        try {
            const r = await fetch(url, { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body: body });
            const result = await r.json();
            if (result.success) { closeModal(); location.reload(); } else { alert('Error: ' + result.message); }
        } catch (err) { alert('Error: ' + err.message); }
    });
</script>
<style>
    .website-link {
        color: #007bff;
        text-decoration: none;
    }
    .website-link:hover {
        text-decoration: underline;
        color: #0056b3;
    }
    .status-badge {
        padding: 0.25rem 0.75rem;
        border-radius: 12px;
        font-size: 0.875rem;
        font-weight: 500;
    }
    .status-available {
        background-color: #DCFCE7;
        color: #166534;
    }
    .status-locked {
        background-color: #FEE2E2;
        color: #991B1B;
    }
</style>
}

@functions {
    string GetSortIcon(string column, string? sortColumn, string? sortDirection)
    {
        if (sortColumn?.ToLower() == column?.ToLower())
            return sortDirection?.ToLower() == "desc" ? "<span class='sort-icon'>&#9660;</span>" : "<span class='sort-icon'>&#9650;</span>";
        return "<span class='sort-icon sort-inactive'>&#9650;&#9660;</span>";
    }
}
