@model List<CNCToolingDatabase.Models.MachineModel>
@using System.Text.Json
@{
    ViewData["Title"] = "Settings - Machine Model";
}

<div class="module-header">
    <h2>Machine Model Management</h2>
    <button type="button" class="btn btn-primary" onclick="openCreateModal()">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        Add Machine Model
    </button>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Search model, machine builder, type, controller..." class="search-input" id="searchInput" />
        </div>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Model</th>
                <th>Machine Builder</th>
                <th>Type</th>
                <th>Controller</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="9" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        </svg>
                        <p>No machine models found</p>
                    </td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    var no = ((int)(ViewBag.CurrentPage ?? 1) - 1) * (int)(ViewBag.PageSize ?? 50) + i + 1;
                    <tr data-edit="@Html.Raw(System.Net.WebUtility.HtmlEncode(JsonSerializer.Serialize(new { id = item.Id, model = item.Model, machineBuilder = item.Description ?? "", type = item.Type ?? "", controller = item.Controller ?? "", isActive = item.IsActive })))">
                        <td>@no</td>
                        <td>@item.Model</td>
                        <td>@(item.Description ?? "-")</td>
                        <td>@(item.Type ?? "-")</td>
                        <td>@(item.Controller ?? "-")</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="status-badge status-available">Active</span>
                            }
                            else
                            {
                                <span class="status-badge status-locked">Inactive</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="editItemFromRow(this)">Edit</button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem(@item.Id, '@(item.Model.Replace("'", "\\'").Replace("\"", "&quot;"))')">Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalPages > 1)
{
    <div class="pagination">
        <span class="page-info">Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) - @Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems) of @ViewBag.TotalItems</span>
        <div class="page-buttons">
            @if (ViewBag.CurrentPage > 1)
            {
                <a href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search" class="btn btn-secondary btn-sm">Previous</a>
            }
            @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
            {
                <a href="?page=@i&search=@ViewBag.Search" class="btn @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-secondary") btn-sm">@i</a>
            }
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search" class="btn btn-secondary btn-sm">Next</a>
            }
        </div>
    </div>
}

<!-- Create/Edit Modal -->
<div class="modal" id="itemModal">
    <div class="modal-backdrop" onclick="closeModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Add Machine Model</h3>
            <button type="button" class="btn-icon" onclick="closeModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <form id="itemForm">
                <input type="hidden" id="itemId" />
                <div class="form-group">
                    <label for="modelValue">Model *</label>
                    <input type="text" id="modelValue" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="machineBuilder">Machine Builder</label>
                    <input type="text" id="machineBuilder" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="typeSelect">Type</label>
                    <select id="typeSelect" class="form-control">
                        <option value="">-- Select Type --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="controllerSelect">Controller</label>
                    <select id="controllerSelect" class="form-control">
                        <option value="">-- Select Controller --</option>
                    </select>
                </div>
                <div class="form-group" id="isActiveGroup" style="display: none;">
                    <label>
                        <input type="checkbox" id="isActive" /> Active
                    </label>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    const TYPE_OPTIONS = ['VerticalMachiningCenter', 'HorizontalMachiningCenter', 'Lathe', 'TurningCenter', 'MillTurn', 'SwissType', 'GantryMill', 'Router', 'EDM', 'LaserCutter', 'Waterjet', 'PlasmaCutter', 'AdditiveManufacturer', 'Mill', 'Other'];
    const CONTROLLER_OPTIONS = ['Celos', 'Fagor', 'Fanuc', 'Haas', 'Heidenhain', 'Mazatrol', 'Mitsubishi', 'Okuma', 'Siemens', 'Other'];
    
    let searchTimeout;
    const searchInput = document.getElementById('searchInput');
    
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(function() {
            document.getElementById('searchForm').submit();
        }, 300);
    });
    
    function fillTypeOptions(selectedVal) {
        const sel = document.getElementById('typeSelect');
        sel.innerHTML = '<option value="">-- Select Type --</option>';
        TYPE_OPTIONS.forEach(v => {
            const opt = document.createElement('option');
            opt.value = v;
            opt.textContent = v;
            if (v === selectedVal) opt.selected = true;
            sel.appendChild(opt);
        });
    }
    
    function fillControllerOptions(selectedVal) {
        const sel = document.getElementById('controllerSelect');
        sel.innerHTML = '<option value="">-- Select Controller --</option>';
        CONTROLLER_OPTIONS.forEach(v => {
            const opt = document.createElement('option');
            opt.value = v;
            opt.textContent = v;
            if (v === selectedVal) opt.selected = true;
            sel.appendChild(opt);
        });
    }
    
    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Add Machine Model';
        document.getElementById('itemForm').reset();
        document.getElementById('itemId').value = '';
        document.getElementById('modelValue').disabled = false;
        fillTypeOptions('');
        fillControllerOptions('');
        document.getElementById('isActiveGroup').style.display = 'none';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function editItemFromRow(btn) {
        const tr = btn.closest('tr');
        const raw = tr.getAttribute('data-edit');
        if (!raw) return;
        let d;
        try { d = JSON.parse(raw); } catch (e) { console.error('Edit row data parse failed:', e); return; }
        document.getElementById('modalTitle').textContent = 'Edit Machine Model';
        document.getElementById('itemId').value = d.id;
        document.getElementById('modelValue').value = d.model;
        document.getElementById('modelValue').disabled = true;
        document.getElementById('machineBuilder').value = d.machineBuilder || '';
        document.getElementById('isActive').checked = d.isActive;
        fillTypeOptions(d.type || '');
        fillControllerOptions(d.controller || '');
        document.getElementById('isActiveGroup').style.display = 'block';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function deleteItem(id, modelVal) {
        const n = (modelVal || '').replace(/&quot;/g, '"');
        if (!confirm('Are you sure you want to delete machine model "' + n + '"?')) return;
        fetch('/Settings/DeleteMachineModel', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'id=' + id
        })
        .then(r => r.json())
        .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
        .catch(e => alert('Error: ' + e.message));
    }
    
    function closeModal() {
        document.getElementById('itemModal').classList.remove('active');
        document.getElementById('modelValue').disabled = false;
    }
    
    document.getElementById('itemForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const itemId = document.getElementById('itemId').value;
        const modelVal = document.getElementById('modelValue').value;
        const machineBuilder = document.getElementById('machineBuilder').value;
        const type = document.getElementById('typeSelect').value;
        const controller = document.getElementById('controllerSelect').value;
        const isActive = document.getElementById('isActive').checked;
        let url = '/Settings/CreateMachineModel';
        let body = 'model=' + encodeURIComponent(modelVal) + '&machineBuilder=' + encodeURIComponent(machineBuilder) + '&type=' + encodeURIComponent(type) + '&controller=' + encodeURIComponent(controller);
        if (itemId) {
            url = '/Settings/UpdateMachineModel';
            body = 'id=' + itemId + '&machineBuilder=' + encodeURIComponent(machineBuilder) + '&type=' + encodeURIComponent(type) + '&controller=' + encodeURIComponent(controller) + '&isActive=' + isActive;
        }
        try {
            const res = await fetch(url, { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body });
            const result = await res.json();
            if (result.success) { closeModal(); location.reload(); }
            else alert('Error: ' + result.message);
        } catch (err) { alert('Error: ' + err.message); }
    });
</script>
}
