@model List<CNCToolingDatabase.Models.PartNumber>
@using System.Text.Json
@{
    ViewData["Title"] = "Settings - Part Number";
    var pcJson = JsonSerializer.Serialize(ViewBag.ProjectCodesForPartNumber ?? Array.Empty<object>());
    pcJson = pcJson.Replace("</script>", "\\u003c/script>", StringComparison.OrdinalIgnoreCase);
    var msJson = JsonSerializer.Serialize(ViewBag.MaterialSpecsForPartNumber ?? Array.Empty<object>());
    msJson = msJson.Replace("</script>", "\\u003c/script>", StringComparison.OrdinalIgnoreCase);
}

<div class="module-header">
    <h2>Part Number Management</h2>
    <div style="display: flex; gap: 0.5rem;">
        <button type="button" class="btn btn-primary" onclick="openCreateModal()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Part Number
        </button>
        <button type="button" class="btn btn-secondary" onclick="resetFromSeed()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="23 4 23 10 17 10"></polyline>
                <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
            Reset
        </button>
    </div>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Search part numbers, description, revs, project code, material, ref. drawing..." class="search-input" id="searchInput" />
        </div>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th>No.</th>
                <th>Part Number</th>
                <th>Description</th>
                <th>Part Rev.</th>
                <th>Drawing Rev.</th>
                <th>Project Code</th>
                <th>Ref. Drawing</th>
                <th>Created By</th>
                <th>Created Date</th>
                <th>Status</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="11" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <p>No part numbers found</p>
                    </td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    var no = ((int)(ViewBag.CurrentPage ?? 1) - 1) * (int)(ViewBag.PageSize ?? 50) + i + 1;
                    <tr data-edit="@Html.Raw(System.Net.WebUtility.HtmlEncode(JsonSerializer.Serialize(new { id = item.Id, name = item.Name, description = item.Description ?? "", project = item.ProjectCode?.Project ?? "", customer = item.ProjectCode?.Description ?? "", projectCodeId = item.ProjectCodeId ?? 0, partRev = item.PartRev ?? "", drawingRev = item.DrawingRev ?? "", materialSpecId = item.MaterialSpecId ?? 0, material = item.MaterialSpec?.Material ?? "", refDrawing = item.RefDrawing ?? "", isActive = item.IsActive })))">
                        <td>@no</td>
                        <td>@item.Name</td>
                        <td>@(item.Description ?? "-")</td>
                        <td>@(item.PartRev ?? "-")</td>
                        <td>@(item.DrawingRev ?? "-")</td>
                        <td>@(item.ProjectCode?.Code ?? "-")</td>
                        <td>@(item.RefDrawing ?? "-")</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="status-badge status-available">Active</span>
                            }
                            else
                            {
                                <span class="status-badge status-locked">Inactive</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="editItemFromRow(this)">Edit</button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem(@item.Id, '@(item.Name.Replace("'", "\\'").Replace("\"", "&quot;"))')">Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalPages > 1)
{
    <div class="pagination">
        <span class="page-info">Showing @((ViewBag.CurrentPage - 1) * ViewBag.PageSize + 1) - @Math.Min(ViewBag.CurrentPage * ViewBag.PageSize, ViewBag.TotalItems) of @ViewBag.TotalItems</span>
        <div class="page-buttons">
            @if (ViewBag.CurrentPage > 1)
            {
                <a href="?page=@(ViewBag.CurrentPage - 1)&search=@ViewBag.Search" class="btn btn-secondary btn-sm">Previous</a>
            }
            @for (int i = Math.Max(1, ViewBag.CurrentPage - 2); i <= Math.Min(ViewBag.TotalPages, ViewBag.CurrentPage + 2); i++)
            {
                <a href="?page=@i&search=@ViewBag.Search" class="btn @(i == ViewBag.CurrentPage ? "btn-primary" : "btn-secondary") btn-sm">@i</a>
            }
            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <a href="?page=@(ViewBag.CurrentPage + 1)&search=@ViewBag.Search" class="btn btn-secondary btn-sm">Next</a>
            }
        </div>
    </div>
}

<!-- Create/Edit Modal -->
<div class="modal" id="itemModal">
    <div class="modal-backdrop" onclick="closeModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Add Part Number</h3>
            <button type="button" class="btn-icon" onclick="closeModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <form id="itemForm">
                <input type="hidden" id="itemId" />
                <div class="form-group">
                    <label for="nameValue">Part Number *</label>
                    <input type="text" id="nameValue" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input type="text" id="description" class="form-control" placeholder="e.g. HINGES-LH, BRACKET RH, LINK LH" />
                </div>
                <div class="form-group">
                    <label>Project</label>
                    <input type="text" id="projectDisplay" class="form-control" readonly placeholder="Auto from Project Code" />
                </div>
                <div class="form-group">
                    <label>Customer</label>
                    <input type="text" id="customerDisplay" class="form-control" readonly placeholder="Auto from Project Code" />
                </div>
                <div class="form-group">
                    <label for="partRev">Part Rev.</label>
                    <input type="text" id="partRev" class="form-control" placeholder="e.g. A00, B00, A, NA" />
                </div>
                <div class="form-group">
                    <label for="drawingRev">Drawing Rev.</label>
                    <input type="text" id="drawingRev" class="form-control" placeholder="e.g. A00, B00, A, NA" />
                </div>
                <div class="form-group">
                    <label for="projectCode">Project Code</label>
                    <select id="projectCode" class="form-control">
                        <option value="">-- Select Project Code --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="materialSpec">Material Spec.</label>
                    <select id="materialSpec" class="form-control">
                        <option value="">-- Select Material Spec. --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label>Material</label>
                    <input type="text" id="materialDisplay" class="form-control" readonly placeholder="Auto from Material Spec." />
                </div>
                <div class="form-group">
                    <label for="refDrawing">Ref. Drawing</label>
                    <input type="text" id="refDrawing" class="form-control" placeholder="e.g. V12345, 351-2261, D123456" />
                </div>
                <div class="form-group" id="isActiveGroup" style="display: none;">
                    <label>
                        <input type="checkbox" id="isActive" /> Active
                    </label>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    window.__projectCodesForPartNumber = @Html.Raw(pcJson);
    window.__materialSpecsForPartNumber = @Html.Raw(msJson);
</script>
<script>
    let searchTimeout;
    const searchInput = document.getElementById('searchInput');
    let projectCodesData = Array.isArray(window.__projectCodesForPartNumber) ? window.__projectCodesForPartNumber : [];
    let materialSpecsData = Array.isArray(window.__materialSpecsForPartNumber) ? window.__materialSpecsForPartNumber : [];
    
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(function() {
            document.getElementById('searchForm').submit();
        }, 300);
    });
    
    function fillProjectCodeOptions(selectedId) {
        const sel = document.getElementById('projectCode');
        sel.innerHTML = '<option value="">-- Select Project Code --</option>';
        projectCodesData.forEach(p => {
            const opt = document.createElement('option');
            opt.value = p.id;
            opt.textContent = p.code;
            opt.dataset.project = p.project || '';
            opt.dataset.customer = p.customer || '';
            if (String(p.id) === String(selectedId) && selectedId !== 0) opt.selected = true;
            sel.appendChild(opt);
        });
    }
    
    function fillMaterialSpecOptions(selectedId) {
        const sel = document.getElementById('materialSpec');
        sel.innerHTML = '<option value="">-- Select Material Spec. --</option>';
        materialSpecsData.forEach(m => {
            const opt = document.createElement('option');
            opt.value = m.id;
            opt.textContent = m.spec + (m.material ? ' \u2013 ' + m.material : '');
            opt.dataset.material = m.material || '';
            if (String(m.id) === String(selectedId) && selectedId !== 0) opt.selected = true;
            sel.appendChild(opt);
        });
    }
    
    function onProjectCodeChange() {
        const sel = document.getElementById('projectCode');
        const opt = sel.selectedOptions[0];
        document.getElementById('projectDisplay').value = opt ? (opt.dataset.project || '') : '';
        document.getElementById('customerDisplay').value = opt ? (opt.dataset.customer || '') : '';
    }
    
    function onMaterialSpecChange() {
        const sel = document.getElementById('materialSpec');
        const opt = sel.selectedOptions[0];
        document.getElementById('materialDisplay').value = opt ? (opt.dataset.material || '') : '';
    }
    
    (function init() {
        fillProjectCodeOptions(0);
        fillMaterialSpecOptions(0);
        document.getElementById('projectCode').addEventListener('change', onProjectCodeChange);
        document.getElementById('materialSpec').addEventListener('change', onMaterialSpecChange);
    })();
    
    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Add Part Number';
        document.getElementById('itemForm').reset();
        document.getElementById('itemId').value = '';
        document.getElementById('nameValue').disabled = false;
        document.getElementById('projectDisplay').value = '';
        document.getElementById('customerDisplay').value = '';
        document.getElementById('materialDisplay').value = '';
        fillProjectCodeOptions(0);
        fillMaterialSpecOptions(0);
        document.getElementById('isActiveGroup').style.display = 'none';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function editItemFromRow(btn) {
        const tr = btn.closest('tr');
        const raw = tr.getAttribute('data-edit');
        if (!raw) return;
        let d;
        try { d = JSON.parse(raw); } catch (e) { console.error('Edit row data parse failed:', e); return; }
        document.getElementById('modalTitle').textContent = 'Edit Part Number';
        document.getElementById('itemId').value = d.id;
        document.getElementById('nameValue').value = d.name;
        document.getElementById('nameValue').disabled = true;
        document.getElementById('description').value = d.description;
        document.getElementById('projectDisplay').value = d.project;
        document.getElementById('customerDisplay').value = d.customer;
        document.getElementById('partRev').value = d.partRev;
        document.getElementById('drawingRev').value = d.drawingRev;
        document.getElementById('refDrawing').value = d.refDrawing;
        document.getElementById('materialDisplay').value = d.material;
        document.getElementById('isActive').checked = d.isActive;
        fillProjectCodeOptions(d.projectCodeId);
        fillMaterialSpecOptions(d.materialSpecId);
        document.getElementById('isActiveGroup').style.display = 'block';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function deleteItem(id, nameVal) {
        const n = (nameVal || '').replace(/&quot;/g, '"');
        if (!confirm('Are you sure you want to delete part number "' + n + '"?')) {
            return;
        }
        fetch('/Settings/DeletePartNumber', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'id=' + id
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) location.reload();
            else alert('Error: ' + data.message);
        })
        .catch(error => alert('Error: ' + error.message));
    }
    
    function resetFromSeed() {
        if (!confirm('This will delete all current part number data and restore seed data only. This action cannot be undone.\n\nDo you want to continue?')) return;
        fetch('/Settings/ResetPartNumber', { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body: '' })
            .then(r => r.json())
            .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
            .catch(e => alert('Error: ' + e.message));
    }
    
    function closeModal() {
        document.getElementById('itemModal').classList.remove('active');
        document.getElementById('nameValue').disabled = false;
    }
    
    document.getElementById('itemForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        const itemId = document.getElementById('itemId').value;
        const nameVal = document.getElementById('nameValue').value;
        const description = document.getElementById('description').value;
        const partRev = document.getElementById('partRev').value;
        const drawingRev = document.getElementById('drawingRev').value;
        const refDrawing = document.getElementById('refDrawing').value;
        const projectCodeId = document.getElementById('projectCode').value || '0';
        const materialSpecId = document.getElementById('materialSpec').value || '0';
        const isActive = document.getElementById('isActive').checked;
        let url = '/Settings/CreatePartNumber';
        let body = 'name=' + encodeURIComponent(nameVal) + '&description=' + encodeURIComponent(description)
            + '&projectCodeId=' + encodeURIComponent(projectCodeId) + '&materialSpecId=' + encodeURIComponent(materialSpecId)
            + '&partRev=' + encodeURIComponent(partRev) + '&drawingRev=' + encodeURIComponent(drawingRev)
            + '&refDrawing=' + encodeURIComponent(refDrawing);
        if (itemId) {
            url = '/Settings/UpdatePartNumber';
            body = 'id=' + itemId + '&description=' + encodeURIComponent(description)
                + '&projectCodeId=' + encodeURIComponent(projectCodeId) + '&materialSpecId=' + encodeURIComponent(materialSpecId)
                + '&partRev=' + encodeURIComponent(partRev) + '&drawingRev=' + encodeURIComponent(drawingRev)
                + '&refDrawing=' + encodeURIComponent(refDrawing) + '&isActive=' + isActive;
        }
        try {
            const response = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: body
            });
            const result = await response.json();
            if (result.success) { closeModal(); location.reload(); }
            else alert('Error: ' + result.message);
        } catch (error) { alert('Error: ' + error.message); }
    });
</script>
}
