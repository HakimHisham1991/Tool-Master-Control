@model List<CNCToolingDatabase.Models.MachineName>
@{
    ViewData["Title"] = "Settings - Machine Name";
}

<div class="module-header">
    <h2>Machine Name Management</h2>
    <div style="display: flex; gap: 0.5rem;">
        <button type="button" class="btn btn-primary" onclick="openCreateModal()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Machine Name
        </button>
        <button type="button" class="btn btn-secondary" onclick="resetFromSeed()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="23 4 23 10 17 10"></polyline>
                <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
            Reset
        </button>
    </div>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <input type="hidden" name="sortColumn" value="@ViewBag.SortColumn" />
        <input type="hidden" name="sortDirection" value="@ViewBag.SortDirection" />
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Search machine names..." class="search-input" id="searchInput" />
        </div>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th onclick="sortBy('id')">No. @Html.Raw(GetSortIcon("id", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('name')">Name @Html.Raw(GetSortIcon("name", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('serialnumber')">Serial Number @Html.Raw(GetSortIcon("serialnumber", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('workcenter')">Machine Workcenter @Html.Raw(GetSortIcon("workcenter", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('machinemodel')">Machine Model @Html.Raw(GetSortIcon("machinemodel", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('createdby')">Created By @Html.Raw(GetSortIcon("createdby", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('createddate')">Created Date @Html.Raw(GetSortIcon("createddate", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('isactive')">Status @Html.Raw(GetSortIcon("isactive", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="9" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <rect x="2" y="7" width="20" height="14" rx="2" ry="2"></rect>
                            <path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"></path>
                        </svg>
                        <p>No machine names found</p>
                    </td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    var no = ((int)(ViewBag.CurrentPage ?? 1) - 1) * (int)(ViewBag.PageSize ?? 250) + i + 1;
                    <tr>
                        <td>@no</td>
                        <td>@item.Name</td>
                        <td>@(item.Description ?? "-")</td>
                        <td>@(item.Workcenter ?? "-")</td>
                        <td>@(item.MachineModel?.Model ?? "-")</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="status-badge status-available">Active</span>
                            }
                            else
                            {
                                <span class="status-badge status-locked">Inactive</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="editItem(@item.Id, '@(item.Name.Replace("'", "\\'").Replace("\"", "&quot;"))', '@((item.Description ?? "").Replace("'", "\\'").Replace("\"", "&quot;"))', '@((item.Workcenter ?? "").Replace("'", "\\'").Replace("\"", "&quot;"))', @(item.MachineModelId?.ToString() ?? "null"), @item.IsActive.ToString().ToLower())">Edit</button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem(@item.Id, '@item.Name')">Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalItems > 0)
{
    @await Html.PartialAsync("_Pagination", new PaginationViewModel
    {
        CurrentPage = (int)ViewBag.CurrentPage,
        TotalPages = Math.Max(1, (int)ViewBag.TotalPages),
        TotalItems = (int)ViewBag.TotalItems,
        PageSize = (int)ViewBag.PageSize,
        QueryBase = (string)(ViewBag.PaginationQuery ?? "")
    })
}

<!-- Create/Edit Modal -->
<div class="modal" id="itemModal">
    <div class="modal-backdrop" onclick="closeModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Add Machine Name</h3>
            <button type="button" class="btn-icon" onclick="closeModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <form id="itemForm">
                <input type="hidden" id="itemId" />
                <div class="form-group">
                    <label for="name">Name *</label>
                    <input type="text" id="name" class="form-control" required />
                </div>
                <div class="form-group">
                    <label for="serialNumber">Serial Number</label>
                    <input type="text" id="serialNumber" class="form-control" placeholder="e.g. E123546WR, 102222ED" />
                </div>
                <div class="form-group">
                    <label for="machineWorkcenter">Machine Workcenter</label>
                    <select id="machineWorkcenter" class="form-control">
                        <option value="">-- Select Machine Workcenter --</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="machineModel">Machine Model</label>
                    <select id="machineModel" class="form-control">
                        <option value="">-- Select Machine Model --</option>
                    </select>
                </div>
                <div class="form-group" id="isActiveGroup" style="display: none;">
                    <label>
                        <input type="checkbox" id="isActive" /> Active
                    </label>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    let searchTimeout;
    const searchInput = document.getElementById('searchInput');
    
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(function() {
            document.getElementById('searchForm').submit();
        }, 300);
    });
    
    function sortBy(column) {
        const params = new URLSearchParams(window.location.search);
        const currentSort = params.get('sortColumn');
        const currentDir = params.get('sortDirection');
        params.set('sortColumn', column);
        params.set('sortDirection', (currentSort === column && currentDir === 'asc') ? 'desc' : 'asc');
        params.set('page', '1');
        window.location.href = '/Settings/MachineName?' + params.toString();
    }
    
    async function ensureWorkcentersLoaded() {
        const sel = document.getElementById('machineWorkcenter');
        if (sel.options.length > 1) return;
        try {
            const r = await fetch('/Settings/GetMachineWorkcenters');
            const list = await r.json();
            sel.innerHTML = '<option value="">-- Select Machine Workcenter --</option>';
            list.forEach(function(x) {
                const opt = document.createElement('option');
                opt.value = x.value;
                opt.textContent = x.text;
                sel.appendChild(opt);
            });
        } catch (e) { console.error(e); }
    }
    
    async function ensureMachineModelsLoaded() {
        const sel = document.getElementById('machineModel');
        if (sel.options.length > 1) return;
        try {
            const r = await fetch('/Settings/GetMachineModels');
            const list = await r.json();
            sel.innerHTML = '<option value="">-- Select Machine Model --</option>';
            list.forEach(function(x) {
                const opt = document.createElement('option');
                opt.value = x.value;
                opt.textContent = x.text;
                sel.appendChild(opt);
            });
        } catch (e) { console.error(e); }
    }
    
    async function openCreateModal() {
        await ensureWorkcentersLoaded();
        await ensureMachineModelsLoaded();
        document.getElementById('modalTitle').textContent = 'Add Machine Name';
        document.getElementById('itemForm').reset();
        document.getElementById('itemId').value = '';
        document.getElementById('name').disabled = false;
        document.getElementById('serialNumber').value = '';
        document.getElementById('machineWorkcenter').value = '';
        document.getElementById('machineModel').value = '';
        document.getElementById('isActiveGroup').style.display = 'none';
        document.getElementById('itemModal').classList.add('active');
    }
    
    async function editItem(id, name, serialNumber, workcenter, machineModelId, isActive) {
        await ensureWorkcentersLoaded();
        await ensureMachineModelsLoaded();
        document.getElementById('modalTitle').textContent = 'Edit Machine Name';
        document.getElementById('itemId').value = id;
        document.getElementById('name').value = (name || '').replace(/&quot;/g, '"');
        document.getElementById('name').disabled = true;
        document.getElementById('serialNumber').value = (serialNumber || '').replace(/&quot;/g, '"');
        document.getElementById('machineWorkcenter').value = (workcenter || '').replace(/&quot;/g, '"');
        document.getElementById('machineModel').value = (machineModelId === 'null' || machineModelId === null || machineModelId === '') ? '' : String(machineModelId);
        document.getElementById('isActive').checked = isActive;
        document.getElementById('isActiveGroup').style.display = 'block';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function deleteItem(id, name) {
        if (!confirm(`Are you sure you want to delete machine name "${name}"?`)) {
            return;
        }
        
        fetch('/Settings/DeleteMachineName', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'id=' + id
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        })
        .catch(error => {
            alert('Error: ' + error.message);
        });
    }
    
    function resetFromSeed() {
        if (!confirm('This will delete all current machine name data and restore seed data only. This action cannot be undone.\n\nDo you want to continue?')) return;
        fetch('/Settings/ResetMachineName', { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body: '' })
            .then(r => r.json())
            .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
            .catch(e => alert('Error: ' + e.message));
    }
    
    function closeModal() {
        document.getElementById('itemModal').classList.remove('active');
        document.getElementById('name').disabled = false;
    }
    
    document.getElementById('itemForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const itemId = document.getElementById('itemId').value;
        const name = document.getElementById('name').value;
        const serialNumber = document.getElementById('serialNumber').value;
        const workcenter = document.getElementById('machineWorkcenter').value;
        const machineModelId = document.getElementById('machineModel').value;
        const isActive = document.getElementById('isActive').checked;
        
        let url = '/Settings/CreateMachineName';
        let body = `name=${encodeURIComponent(name)}&description=${encodeURIComponent(serialNumber)}&workcenter=${encodeURIComponent(workcenter)}&machineModelId=${encodeURIComponent(machineModelId)}`;
        
        if (itemId) {
            url = '/Settings/UpdateMachineName';
            body = `id=${itemId}&description=${encodeURIComponent(serialNumber)}&workcenter=${encodeURIComponent(workcenter)}&machineModelId=${encodeURIComponent(machineModelId)}&isActive=${isActive}`;
        }
        
        try {
            const response = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: body
            });
            const result = await response.json();
            
            if (result.success) {
                closeModal();
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            alert('Error: ' + error.message);
        }
    });
</script>
}

@functions {
    string GetSortIcon(string column, string sortColumn, string sortDirection)
    {
        if (sortColumn?.ToLower() == column?.ToLower())
            return sortDirection?.ToLower() == "desc" ? "<span class='sort-icon'>&#9660;</span>" : "<span class='sort-icon'>&#9650;</span>";
        return "<span class='sort-icon sort-inactive'>&#9650;&#9660;</span>";
    }
}
