@model List<CNCToolingDatabase.Models.MaterialSpec>
@{
    ViewData["Title"] = "Settings - Material Specification (On Drawing)";
}

<div class="module-header">
    <h2>Material Specification (On Drawing) Management</h2>
    <div style="display: flex; gap: 0.5rem;">
        <button type="button" class="btn btn-primary" onclick="openCreateModal()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Add Material Specification (On Drawing)
        </button>
        <button type="button" class="btn btn-secondary" onclick="resetFromSeed()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="23 4 23 10 17 10"></polyline>
                <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
            Reset
        </button>
    </div>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <input type="hidden" name="sortColumn" value="@ViewBag.SortColumn" />
        <input type="hidden" name="sortDirection" value="@ViewBag.SortDirection" />
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@ViewBag.Search" placeholder="Search by any column..." class="search-input" id="searchInput" />
        </div>
        <button type="submit" class="btn btn-primary btn-sm">Search</button>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th onclick="sortBy('id')">No. @Html.Raw(GetSortIcon("id", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('materialspec')">Material Specification (On Drawing) @Html.Raw(GetSortIcon("materialspec", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('specpurchased')">Material Specification (Purchased) @Html.Raw(GetSortIcon("specpurchased", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('material')">General Name @Html.Raw(GetSortIcon("material", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('supplycondition')">Material Supply Condition (Purchased) @Html.Raw(GetSortIcon("supplycondition", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('materialtype')">Material Type @Html.Raw(GetSortIcon("materialtype", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('createdby')">Created By @Html.Raw(GetSortIcon("createdby", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('createddate')">Created Date @Html.Raw(GetSortIcon("createddate", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th onclick="sortBy('isactive')">Status @Html.Raw(GetSortIcon("isactive", ViewBag.SortColumn as string, ViewBag.SortDirection as string))</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Count == 0)
            {
                <tr>
                    <td colspan="10" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <p>No material specifications found</p>
                    </td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.Count; i++)
                {
                    var item = Model[i];
                    var no = ((int)(ViewBag.CurrentPage ?? 1) - 1) * (int)(ViewBag.PageSize ?? 250) + i + 1;
                    var specJs = (item.Spec ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", " ");
                    var specPurchasedJs = (item.MaterialSpecPurchased ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", " ");
                    var materialJs = (item.Material ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", " ");
                    var supplyConditionJs = (item.MaterialSupplyConditionPurchased ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", " ");
                    var materialTypeJs = (item.MaterialType ?? "").Replace("\\", "\\\\").Replace("'", "\\'").Replace("\r", "").Replace("\n", " ");
                    <tr>
                        <td>@no</td>
                        <td>@item.Spec</td>
                        <td>@item.MaterialSpecPurchased</td>
                        <td>@item.Material</td>
                        <td>@item.MaterialSupplyConditionPurchased</td>
                        <td>@item.MaterialType</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.IsActive)
                            {
                                <span class="status-badge status-available">Active</span>
                            }
                            else
                            {
                                <span class="status-badge status-locked">Inactive</span>
                            }
                        </td>
                        <td>
                            <button type="button" class="btn btn-secondary btn-sm" onclick="editItem(@item.Id, '@specJs', '@specPurchasedJs', '@materialJs', '@supplyConditionJs', '@materialTypeJs', @item.IsActive.ToString().ToLower())">Edit</button>
                            <button type="button" class="btn btn-danger btn-sm" onclick="deleteItem(@item.Id, '@specJs', '@materialJs')">Delete</button>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (ViewBag.TotalItems > 0)
{
    @await Html.PartialAsync("_Pagination", new PaginationViewModel
    {
        CurrentPage = (int)ViewBag.CurrentPage,
        TotalPages = Math.Max(1, (int)ViewBag.TotalPages),
        TotalItems = (int)ViewBag.TotalItems,
        PageSize = (int)ViewBag.PageSize,
        QueryBase = (string)(ViewBag.PaginationQuery ?? "")
    })
}

<!-- Create/Edit Modal -->
<div class="modal" id="itemModal">
    <div class="modal-backdrop" onclick="closeModal()"></div>
    <div class="modal-content">
        <div class="modal-header">
            <h3 id="modalTitle">Add Material Specification (On Drawing)</h3>
            <button type="button" class="btn-icon" onclick="closeModal()">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <line x1="18" y1="6" x2="6" y2="18"></line>
                    <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
            </button>
        </div>
        <div class="modal-body">
            <form id="itemForm">
                <input type="hidden" id="itemId" />
                <div class="form-group">
                    <label for="spec">Material Specification (On Drawing) *</label>
                    <input type="text" id="spec" class="form-control" placeholder="e.g. ABP3-2101" required />
                </div>
                <div class="form-group">
                    <label for="specPurchased">Material Specification (Purchased)</label>
                    <input type="text" id="specPurchased" class="form-control" placeholder="e.g. AMS 4928" />
                </div>
                <div class="form-group">
                    <label for="material">General Name *</label>
                    <input type="text" id="material" class="form-control" placeholder="e.g. Aluminum Alloy 7075" required />
                </div>
                <div class="form-group">
                    <label for="supplyCondition">Material Supply Condition (Purchased)</label>
                    <input type="text" id="supplyCondition" class="form-control" placeholder="e.g. Annealed" />
                </div>
                <div class="form-group">
                    <label for="materialType">Material Type</label>
                    <input type="text" id="materialType" class="form-control" placeholder="e.g. Bar, Plate" />
                </div>
                <div class="form-group" id="isActiveGroup" style="display: none;">
                    <label>
                        <input type="checkbox" id="isActive" /> Active
                    </label>
                </div>
                <div class="modal-actions">
                    <button type="button" class="btn btn-secondary" onclick="closeModal()">Cancel</button>
                    <button type="submit" class="btn btn-primary">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    function sortBy(column) {
        const params = new URLSearchParams(window.location.search);
        const currentSort = params.get('sortColumn');
        const currentDir = params.get('sortDirection');
        params.set('sortColumn', column);
        params.set('sortDirection', (currentSort === column && currentDir === 'asc') ? 'desc' : 'asc');
        params.set('page', '1');
        window.location.href = window.location.pathname + '?' + params.toString();
    }
    
    function openCreateModal() {
        document.getElementById('modalTitle').textContent = 'Add Material Specification (On Drawing)';
        document.getElementById('itemForm').reset();
        document.getElementById('itemId').value = '';
        document.getElementById('spec').disabled = false;
        document.getElementById('specPurchased').disabled = false;
        document.getElementById('material').disabled = false;
        document.getElementById('supplyCondition').disabled = false;
        document.getElementById('materialType').disabled = false;
        document.getElementById('isActiveGroup').style.display = 'none';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function editItem(id, spec, specPurchased, material, supplyCondition, materialType, isActive) {
        document.getElementById('modalTitle').textContent = 'Edit Material Specification (On Drawing)';
        document.getElementById('itemId').value = id;
        document.getElementById('spec').value = spec || '';
        document.getElementById('spec').disabled = true;
        document.getElementById('specPurchased').value = specPurchased || '';
        document.getElementById('specPurchased').disabled = false;
        document.getElementById('material').value = material || '';
        document.getElementById('material').disabled = false;
        document.getElementById('supplyCondition').value = supplyCondition || '';
        document.getElementById('supplyCondition').disabled = false;
        document.getElementById('materialType').value = materialType || '';
        document.getElementById('materialType').disabled = false;
        document.getElementById('isActive').checked = isActive;
        document.getElementById('isActiveGroup').style.display = 'block';
        document.getElementById('itemModal').classList.add('active');
    }
    
    function deleteItem(id, spec, material) {
        if (!confirm(`Are you sure you want to delete Material Specification (On Drawing) "${spec}" / General Name "${material}"?`)) {
            return;
        }
        
        fetch('/Settings/DeleteMaterialSpec', {
            method: 'POST',
            headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
            body: 'id=' + id
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Error: ' + data.message);
            }
        })
        .catch(error => {
            alert('Error: ' + error.message);
        });
    }
    
    function resetFromSeed() {
        if (!confirm('This will delete all current material specification data and restore seed data only. This action cannot be undone.\n\nDo you want to continue?')) return;
        fetch('/Settings/ResetMaterialSpec', { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body: '' })
            .then(r => r.json())
            .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
            .catch(e => alert('Error: ' + e.message));
    }
    
    function closeModal() {
        document.getElementById('itemModal').classList.remove('active');
        document.getElementById('spec').disabled = false;
        document.getElementById('specPurchased').disabled = false;
        document.getElementById('material').disabled = false;
        document.getElementById('supplyCondition').disabled = false;
        document.getElementById('materialType').disabled = false;
    }
    
    document.getElementById('itemForm').addEventListener('submit', async function(e) {
        e.preventDefault();
        
        const itemId = document.getElementById('itemId').value;
        const spec = document.getElementById('spec').value.trim();
        const specPurchased = document.getElementById('specPurchased').value.trim();
        const material = document.getElementById('material').value.trim();
        const supplyCondition = document.getElementById('supplyCondition').value.trim();
        const materialType = document.getElementById('materialType').value.trim();
        const isActive = document.getElementById('isActive').checked;
        
        let url = '/Settings/CreateMaterialSpec';
        let body = `spec=${encodeURIComponent(spec)}&materialSpecPurchased=${encodeURIComponent(specPurchased)}&material=${encodeURIComponent(material)}&materialSupplyConditionPurchased=${encodeURIComponent(supplyCondition)}&materialType=${encodeURIComponent(materialType)}`;
        
        if (itemId) {
            url = '/Settings/UpdateMaterialSpec';
            body = `id=${itemId}&materialSpecPurchased=${encodeURIComponent(specPurchased)}&material=${encodeURIComponent(material)}&materialSupplyConditionPurchased=${encodeURIComponent(supplyCondition)}&materialType=${encodeURIComponent(materialType)}&isActive=${isActive}`;
        }
        
        if (!spec && !itemId) {
            alert('Material Specification (On Drawing) is required.');
            return;
        }
        if (!material) {
            alert('General Name is required.');
            return;
        }
        
        try {
            const response = await fetch(url, {
                method: 'POST',
                headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
                body: body
            });
            const result = await response.json();
            
            if (result.success) {
                closeModal();
                location.reload();
            } else {
                alert('Error: ' + result.message);
            }
        } catch (error) {
            alert('Error: ' + error.message);
        }
    });
</script>
}

@functions {
    string GetSortIcon(string column, string? sortColumn, string? sortDirection)
    {
        if (sortColumn?.ToLower() == column?.ToLower())
            return sortDirection?.ToLower() == "desc" ? "<span class='sort-icon'>&#9660;</span>" : "<span class='sort-icon'>&#9650;</span>";
        return "<span class='sort-icon sort-inactive'>&#9650;&#9660;</span>";
    }
}
