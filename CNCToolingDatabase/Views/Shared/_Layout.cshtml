<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CNC Tooling Database</title>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @if (Context.Session.GetInt32("UserId").HasValue)
    {
        <div class="app-container">
            <header class="app-header">
                <div class="header-left">
                    <button class="sidebar-toggle" onclick="toggleSidebar()">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="3" y1="6" x2="21" y2="6"></line>
                            <line x1="3" y1="12" x2="21" y2="12"></line>
                            <line x1="3" y1="18" x2="21" y2="18"></line>
                        </svg>
                    </button>
                    <h1 class="app-title">CNC Tooling Database</h1>
                </div>
                <div class="header-right">
                    <span class="username">@Context.Session.GetString("DisplayName")</span>
                    <a href="/logout" class="btn btn-secondary btn-sm">Logout</a>
                </div>
            </header>
            
            <div class="app-body">
                <aside class="sidebar" id="sidebar">
                    <nav class="sidebar-nav">
                        <a href="/ToolCode" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "ToolCode" ? "active" : "")">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <circle cx="11" cy="11" r="8"></circle>
                                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
                            </svg>
                            <span>Tool Code Database</span>
                        </a>
                        <a href="/ToolList" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "ToolList" ? "active" : "")">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                                <polyline points="14 2 14 8 20 8"></polyline>
                                <line x1="16" y1="13" x2="8" y2="13"></line>
                                <line x1="16" y1="17" x2="8" y2="17"></line>
                            </svg>
                            <span>Tool List Database</span>
                        </a>
                        <a href="/ToolListEditor" class="nav-item @(ViewContext.RouteData.Values["controller"]?.ToString() == "ToolListEditor" ? "active" : "")">
                            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                            </svg>
                            <span>Create / Edit Tool List</span>
                        </a>
                    </nav>
                </aside>
                
                <main class="main-content">
                    @RenderBody()
                </main>
            </div>
        </div>
    }
    else
    {
        @RenderBody()
    }
    
    <script src="~/js/site.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
