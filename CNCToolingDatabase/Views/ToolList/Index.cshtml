@model ToolListDatabaseViewModel
@{
    ViewData["Title"] = "Tool List Database";
}

<div class="module-header">
    <h2>Tool List Database</h2>
    <div class="export-buttons">
        <button type="button" class="btn btn-secondary btn-sm" onclick="resetFromSeed()">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="23 4 23 10 17 10"></polyline><path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path></svg>
            Reset
        </button>
        @{ var toolListExportQ = new List<string> { "format=excel" }; if (!string.IsNullOrEmpty(Model.SearchTerm)) toolListExportQ.Add("search=" + Uri.EscapeDataString(Model.SearchTerm)); if (!string.IsNullOrEmpty(Model.ToolListNameFilter)) toolListExportQ.Add("toolListName=" + Uri.EscapeDataString(Model.ToolListNameFilter)); if (!string.IsNullOrEmpty(Model.PartNumberFilter)) toolListExportQ.Add("partNumber=" + Uri.EscapeDataString(Model.PartNumberFilter)); if (!string.IsNullOrEmpty(Model.OperationFilter)) toolListExportQ.Add("operation=" + Uri.EscapeDataString(Model.OperationFilter)); if (!string.IsNullOrEmpty(Model.RevisionFilter)) toolListExportQ.Add("revision=" + Uri.EscapeDataString(Model.RevisionFilter)); if (!string.IsNullOrEmpty(Model.NumberOfToolingFilter)) toolListExportQ.Add("numberOfTooling=" + Uri.EscapeDataString(Model.NumberOfToolingFilter)); var toolListExportQuery = "?" + string.Join("&", toolListExportQ); }
        <a href="/ToolList/Export@(toolListExportQuery)" class="btn btn-secondary btn-sm">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
            Excel
        </a>
        <a href="/ToolList/Export@(toolListExportQuery.Replace("format=excel", "format=csv"))" class="btn btn-secondary btn-sm">CSV</a>
        <a href="/ToolList/Export@(toolListExportQuery.Replace("format=excel", "format=txt"))" class="btn btn-secondary btn-sm">TXT</a>
    </div>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search tool lists..." class="search-input" id="searchInput" />
        </div>
        <div class="search-actions">
            <button type="submit" class="btn btn-primary btn-sm">Search</button>
            <button type="button" class="btn btn-secondary btn-sm" onclick="clearFilters()">Clear</button>
        </div>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr class="table-filter-row">
                <th></th>
                <th>
                    <select id="filterToolListName" class="filter-cell-select" onchange="applyFilters();">
                        <option value="">All</option>
                        @foreach (var v in Model.AvailableToolListNames) { if (Model.ToolListNameFilter == v) { <option value="@v" selected>@v</option> } else { <option value="@v">@v</option> } }
                    </select>
                </th>
                <th>
                    <select id="filterPartNumber" class="filter-cell-select" onchange="applyFilters();">
                        <option value="">All</option>
                        @foreach (var v in Model.AvailablePartNumbers) { if (Model.PartNumberFilter == v) { <option value="@v" selected>@v</option> } else { <option value="@v">@v</option> } }
                    </select>
                </th>
                <th>
                    <select id="filterOperation" class="filter-cell-select" onchange="applyFilters();">
                        <option value="">All</option>
                        @foreach (var v in Model.AvailableOperations) { if (Model.OperationFilter == v) { <option value="@v" selected>@v</option> } else { <option value="@v">@v</option> } }
                    </select>
                </th>
                <th>
                    <select id="filterRevision" class="filter-cell-select" onchange="applyFilters();">
                        <option value="">All</option>
                        @foreach (var v in Model.AvailableRevisions) { if (Model.RevisionFilter == v) { <option value="@v" selected>@v</option> } else { <option value="@v">@v</option> } }
                    </select>
                </th>
                <th>
                    <select id="filterNumberOfTooling" class="filter-cell-select" onchange="applyFilters();">
                        <option value="">All</option>
                        @foreach (var v in Model.AvailableNumberOfToolings) { if (Model.NumberOfToolingFilter == v) { <option value="@v" selected>@v</option> } else { <option value="@v">@v</option> } }
                    </select>
                </th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            <tr>
                <th onclick="sortBy('id')">No. @Html.Raw(GetSortIcon("id"))</th>
                <th onclick="sortBy('toolListName')">Tool List Name @Html.Raw(GetSortIcon("toolListName"))</th>
                <th onclick="sortBy('partNumber')">Part Number @Html.Raw(GetSortIcon("partNumber"))</th>
                <th onclick="sortBy('operation')">Operation @Html.Raw(GetSortIcon("operation"))</th>
                <th onclick="sortBy('revision')">Revision @Html.Raw(GetSortIcon("revision"))</th>
                <th onclick="sortBy('numberOfTooling')">No. of Tooling @Html.Raw(GetSortIcon("numberOfTooling"))</th>
                <th onclick="sortBy('createdBy')">Created By @Html.Raw(GetSortIcon("createdBy"))</th>
                <th onclick="sortBy('createdDate')">Created Date @Html.Raw(GetSortIcon("createdDate"))</th>
                <th onclick="sortBy('status')">Status @Html.Raw(GetSortIcon("status"))</th>
                <th onclick="sortBy('lastModifiedDate')">Last Modified @Html.Raw(GetSortIcon("lastModifiedDate"))</th>
                <th onclick="sortBy('editingDuration')">Editing Duration @Html.Raw(GetSortIcon("editingDuration"))</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ToolLists.Count == 0)
            {
                <tr>
                    <td colspan="12" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <p>No tool lists created yet</p>
                        <a href="/ToolListEditor" class="btn btn-primary btn-sm">Create New</a>
                    </td>
                </tr>
            }
            else
            {
                @for (int i = 0; i < Model.ToolLists.Count; i++)
                {
                    var item = Model.ToolLists[i];
                    var currentPage = Math.Max(1, Model.CurrentPage);
                    var pageSize = Math.Max(1, Model.PageSize);
                    var sortById = string.Equals(Model.SortColumn, "id", StringComparison.OrdinalIgnoreCase);
                    var sortDesc = string.Equals(Model.SortDirection, "desc", StringComparison.OrdinalIgnoreCase);
                    var no = sortById && sortDesc
                        ? (currentPage - 1) * pageSize + Model.ToolLists.Count - i
                        : (currentPage - 1) * pageSize + i + 1;
                    <tr>
                        <td>@no</td>
                        <td>
                            <a href="/ToolListEditor?id=@item.Id" target="_blank" class="tool-list-link">@item.ToolListName</a>
                        </td>
                        <td>@item.PartNumber</td>
                        <td>@item.Operation</td>
                        <td>@item.Revision</td>
                        <td>@item.NumberOfTooling</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.LockedBy == null)
                            {
                                <span class="status-badge status-available">Available</span>
                            }
                            else
                            {
                                <span class="status-badge status-locked">
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                    Locked by @item.LockedBy
                                </span>
                            }
                        </td>
                        <td>@item.LastModifiedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(item.EditingDuration ?? "-")</td>
                        <td>
                            @if (item.CanEdit)
                            {
                                <a href="/ToolListEditor?id=@item.Id" target="_blank" class="btn btn-primary btn-sm">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Edit
                                </a>
                            }
                            else
                            {
                                <a href="/ToolListEditor?id=@item.Id" target="_blank" class="btn btn-secondary btn-sm">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    View
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.TotalItems > 0)
{
    var qb = new List<string>();
    if (!string.IsNullOrEmpty(Model.SearchTerm)) qb.Add("search=" + Uri.EscapeDataString(Model.SearchTerm));
    if (!string.IsNullOrEmpty(Model.ToolListNameFilter)) qb.Add("toolListName=" + Uri.EscapeDataString(Model.ToolListNameFilter));
    if (!string.IsNullOrEmpty(Model.PartNumberFilter)) qb.Add("partNumber=" + Uri.EscapeDataString(Model.PartNumberFilter));
    if (!string.IsNullOrEmpty(Model.OperationFilter)) qb.Add("operation=" + Uri.EscapeDataString(Model.OperationFilter));
    if (!string.IsNullOrEmpty(Model.RevisionFilter)) qb.Add("revision=" + Uri.EscapeDataString(Model.RevisionFilter));
    if (!string.IsNullOrEmpty(Model.NumberOfToolingFilter)) qb.Add("numberOfTooling=" + Uri.EscapeDataString(Model.NumberOfToolingFilter));
    if (!string.IsNullOrEmpty(Model.SortColumn)) qb.Add("sortColumn=" + Uri.EscapeDataString(Model.SortColumn));
    if (!string.IsNullOrEmpty(Model.SortDirection)) qb.Add("sortDirection=" + Uri.EscapeDataString(Model.SortDirection));
    @await Html.PartialAsync("_Pagination", new PaginationViewModel
    {
        CurrentPage = Model.CurrentPage,
        TotalPages = Math.Max(1, Model.TotalPages),
        TotalItems = Model.TotalItems,
        PageSize = Model.PageSize,
        QueryBase = string.Join("&", qb)
    });
}

@section Scripts {
<script>
    document.getElementById('searchForm').addEventListener('submit', function(e) { e.preventDefault(); applyFilters(); });
    function applyFilters() {
        const params = new URLSearchParams();
        const search = document.getElementById('searchInput').value;
        const toolListName = document.getElementById('filterToolListName').value;
        const partNumber = document.getElementById('filterPartNumber').value;
        const operation = document.getElementById('filterOperation').value;
        const revision = document.getElementById('filterRevision').value;
        const numberOfTooling = document.getElementById('filterNumberOfTooling').value;
        if (search) params.set('search', search);
        if (toolListName) params.set('toolListName', toolListName);
        if (partNumber) params.set('partNumber', partNumber);
        if (operation) params.set('operation', operation);
        if (revision) params.set('revision', revision);
        if (numberOfTooling) params.set('numberOfTooling', numberOfTooling);
        window.location.href = '/ToolList?' + params.toString();
    }
    function clearFilters() { window.location.href = '/ToolList'; }
    function sortBy(column) {
        const params = new URLSearchParams(window.location.search);
        const currentSort = params.get('sortColumn');
        const currentDir = params.get('sortDirection');
        
        params.set('sortColumn', column);
        params.set('sortDirection', (currentSort === column && currentDir === 'asc') ? 'desc' : 'asc');
        params.set('page', '1');
        
        window.location.href = '/ToolList?' + params.toString();
    }
    
    function resetFromSeed() {
        if (!confirm('This will delete all Tool List data and restore seed data only. This action cannot be undone.\n\nDo you want to continue?')) return;
        fetch('/ToolList/Reset', { method: 'POST', headers: { 'Content-Type': 'application/x-www-form-urlencoded' }, body: '' })
            .then(r => r.json())
            .then(data => { if (data.success) location.reload(); else alert('Error: ' + data.message); })
            .catch(e => alert('Error: ' + e.message));
    }
    
    // Refresh every 5 seconds to show lock status immediately
    setInterval(function() {
        location.reload();
    }, 5000);
</script>
}

@functions {
    string GetSortIcon(string column)
    {
        if (Model.SortColumn?.ToLower() == column.ToLower())
        {
            return Model.SortDirection?.ToLower() == "desc" 
                ? "<span class='sort-icon'>&#9660;</span>" 
                : "<span class='sort-icon'>&#9650;</span>";
        }
        return "<span class='sort-icon sort-inactive'>&#9650;&#9660;</span>";
    }
}
