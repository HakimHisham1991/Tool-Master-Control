@model ToolListDatabaseViewModel
@{
    ViewData["Title"] = "Tool List Database";
}

<div class="module-header">
    <h2>Tool List Database</h2>
    <div class="export-buttons">
        <a href="/ToolList/Export?format=excel&search=@Model.SearchTerm" class="btn btn-secondary btn-sm">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
            Excel
        </a>
        <a href="/ToolList/Export?format=csv&search=@Model.SearchTerm" class="btn btn-secondary btn-sm">CSV</a>
        <a href="/ToolList/Export?format=txt&search=@Model.SearchTerm" class="btn btn-secondary btn-sm">TXT</a>
    </div>
</div>

<div class="search-bar">
    <form method="get" id="searchForm">
        <div class="search-input-group">
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="11" cy="11" r="8"></circle>
                <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
            </svg>
            <input type="text" name="search" value="@Model.SearchTerm" placeholder="Search tool lists..." class="search-input" id="searchInput" />
        </div>
    </form>
</div>

<div class="table-container">
    <table class="data-table">
        <thead>
            <tr>
                <th onclick="sortBy('toolListName')">Tool List Name @Html.Raw(GetSortIcon("toolListName"))</th>
                <th onclick="sortBy('partNumber')">Part Number @Html.Raw(GetSortIcon("partNumber"))</th>
                <th onclick="sortBy('operation')">Operation @Html.Raw(GetSortIcon("operation"))</th>
                <th>Revision</th>
                <th onclick="sortBy('createdBy')">Created By @Html.Raw(GetSortIcon("createdBy"))</th>
                <th onclick="sortBy('createdDate')">Created Date @Html.Raw(GetSortIcon("createdDate"))</th>
                <th>Status</th>
                <th onclick="sortBy('lastModifiedDate')">Last Modified @Html.Raw(GetSortIcon("lastModifiedDate"))</th>
                <th>Editing Duration</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.ToolLists.Count == 0)
            {
                <tr>
                    <td colspan="10" class="empty-state">
                        <svg width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
                            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                            <polyline points="14 2 14 8 20 8"></polyline>
                        </svg>
                        <p>No tool lists created yet</p>
                        <a href="/ToolListEditor" class="btn btn-primary btn-sm">Create New</a>
                    </td>
                </tr>
            }
            else
            {
                @foreach (var item in Model.ToolLists)
                {
                    <tr>
                        <td>
                            <a href="/ToolListEditor?id=@item.Id" target="_blank" class="tool-list-link">@item.ToolListName</a>
                        </td>
                        <td>@item.PartNumber</td>
                        <td>@item.Operation</td>
                        <td>@item.Revision</td>
                        <td>@item.CreatedBy</td>
                        <td>@item.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @if (item.LockedBy == null)
                            {
                                <span class="status-badge status-available">Available</span>
                            }
                            else
                            {
                                <span class="status-badge status-locked">
                                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                                        <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
                                    </svg>
                                    Locked by @item.LockedBy
                                </span>
                            }
                        </td>
                        <td>@item.LastModifiedDate.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(item.EditingDuration ?? "-")</td>
                        <td>
                            @if (item.CanEdit)
                            {
                                <a href="/ToolListEditor?id=@item.Id" target="_blank" class="btn btn-primary btn-sm">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                                        <path d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                                    </svg>
                                    Edit
                                </a>
                            }
                            else
                            {
                                <a href="/ToolListEditor?id=@item.Id" target="_blank" class="btn btn-secondary btn-sm">
                                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                                        <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                                        <circle cx="12" cy="12" r="3"></circle>
                                    </svg>
                                    View
                                </a>
                            }
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@if (Model.TotalPages > 1)
{
    <div class="pagination">
        <span class="page-info">Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) - @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalItems) of @Model.TotalItems</span>
        <div class="page-buttons">
            @if (Model.CurrentPage > 1)
            {
                <a href="?page=@(Model.CurrentPage - 1)&search=@Model.SearchTerm&sortColumn=@Model.SortColumn&sortDirection=@Model.SortDirection" class="btn btn-secondary btn-sm">Previous</a>
            }
            @for (int i = Math.Max(1, Model.CurrentPage - 2); i <= Math.Min(Model.TotalPages, Model.CurrentPage + 2); i++)
            {
                <a href="?page=@i&search=@Model.SearchTerm&sortColumn=@Model.SortColumn&sortDirection=@Model.SortDirection" 
                   class="btn @(i == Model.CurrentPage ? "btn-primary" : "btn-secondary") btn-sm">@i</a>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <a href="?page=@(Model.CurrentPage + 1)&search=@Model.SearchTerm&sortColumn=@Model.SortColumn&sortDirection=@Model.SortDirection" class="btn btn-secondary btn-sm">Next</a>
            }
        </div>
    </div>
}

@section Scripts {
<script>
    let searchTimeout;
    const searchInput = document.getElementById('searchInput');
    
    searchInput.addEventListener('input', function() {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(function() {
            document.getElementById('searchForm').submit();
        }, 300);
    });
    
    function sortBy(column) {
        const params = new URLSearchParams(window.location.search);
        const currentSort = params.get('sortColumn');
        const currentDir = params.get('sortDirection');
        
        params.set('sortColumn', column);
        params.set('sortDirection', (currentSort === column && currentDir === 'asc') ? 'desc' : 'asc');
        params.set('page', '1');
        
        window.location.href = '/ToolList?' + params.toString();
    }
    
    // Refresh every 5 seconds to show lock status immediately
    setInterval(function() {
        location.reload();
    }, 5000);
</script>
}

@functions {
    string GetSortIcon(string column)
    {
        if (Model.SortColumn?.ToLower() == column.ToLower())
        {
            return Model.SortDirection?.ToLower() == "desc" 
                ? "<span class='sort-icon'>&#9660;</span>" 
                : "<span class='sort-icon'>&#9650;</span>";
        }
        return "<span class='sort-icon sort-inactive'>&#9650;&#9660;</span>";
    }
}
